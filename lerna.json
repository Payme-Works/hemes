{
  "npmClient": "yarn",
  "useWorkspaces": true,
  "packages": [
    "packages/*"
  ],
  "command": {
    "version": {
      "exact": true,
      "conventionalCommits": true,
      "message": "chore(release): Publish %s"
    },
    "publish": {
      "npmClient": "npm",
      "allowBranch": [
        "release/*"
      ],
      "conventionalCommits": true,
      "message": "chore: Publish",
      "registry": "https://registry.npmjs.org/"
    }
  },
  "version": "0.0.1-next.2"
}
